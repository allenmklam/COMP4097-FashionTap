<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hk.edu.hkbu.comp.groupd.fashiontap.carousels.InfiniteCarouselActivity">

    <com.yarolegovich.discretescrollview.DiscreteScrollView
        android:id="@+id/infinite_carousel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dsv_orientation="horizontal" />

    <com.yarolegovich.discretescrollview.DiscreteScrollView
        android:id="@+id/infinite_carousel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_vertical"
        app:dsv_orientation="horizontal" />

    <info.hoang8f.widget.FButton
        android:id="@+id/listbutton"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:text="所有"
        android:textSize="20sp"
        android:layout_gravity="left|bottom"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="50dp"
        android:textColor="@android:color/white"
        fbutton:buttonColor="@color/fbutton_color_turquoise"
        fbutton:cornerRadius="5dp"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        />

    <info.hoang8f.widget.FButton
        android:id="@+id/helpbutton"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:text="幫我選"
        android:textSize="20sp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="50dp"
        android:textColor="@android:color/white"
        fbutton:color="@android:color/holo_red_dark"
        fbutton:cornerRadius="5dp"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        />

    <info.hoang8f.widget.FButton
        android:id="@+id/addbutton"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="20sp"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="50dp"
        android:textColor="@android:color/white"
        fbutton:shadowEnabled="true"
        fbutton:cornerRadius="5dp"
        fbutton:shadowHeight="5dp"
        />

</FrameLayout>
